<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book">
	<select id="selectAll" resultType="com.example.spring04.dto.BookDto">
		SELECT num,title,author,publisher
		FROM book
		ORDER BY num ASC
	</select>
	
	<select  id="getByNum"  parameterType="int"  resultType="com.example.spring04.dto.BookDto">
		SELECT num,title,author,publisher
		FROM book
		WHERE num = #{num}
	</select>
	
	<insert  id="insert" parameterType="com.example.spring04.dto.BookDto">
		INSERT INTO book
		(num,title,author,publisher)
		VALUES(book_seq.NEXTVAL,#{title},#{author},#{publisher})
	</insert>
	
	<update id="update" parameterType="com.example.spring04.dto.BookDto">
		UPDATE book
		SET title=#{title},author=#{author},publisher=#{publisher}
		WHERE num=#{num}
	</update>
	
	<delete id="delete" parameterType="com.example.spring04.dto.BookDto">
		DELETE FROM book
		WHERE num=#{num}
	</delete>
</mapper>